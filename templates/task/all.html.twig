<table border>
    <tr>
        <th>Id</th>
        <th>Task</th>
        <th>Date</th>
        <th>Autor</th>
    </tr>
    {% for task in tasks  %}
        <tr>
            <td>{{ task.id }}</td>
            <td>{{ task.task }}</td>
            <td>{{ task.dueDate.format('d/m/Y') }}</td>
            <td>{{task.autor}}</td>

        </tr>
    {% endfor %}
</table>